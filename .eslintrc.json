{
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["prettier", "security"],
  "extends": ["eslint:recommended", "prettier", "plugin:security/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
